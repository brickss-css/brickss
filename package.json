{
  "name": "brickss",
  "version": "0.0.0",
  "private": true,
  "description": "CSS-in-JS library for libraries",
  "scripts": {
    "test": "ava",
    "build": "tsc -b ./",
    "lint:staged": "lint-staged",
    "postinstall": "npm run build"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d4rkr00t/brickss.git"
  },
  "keywords": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/d4rkr00t/brickss/issues"
  },
  "homepage": "https://github.com/d4rkr00t/brickss#readme",
  "devDependencies": {
    "ava": "^2.3.0",
    "lint-staged": "^9.2.4",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --no-editorconfig --write",
      "git add"
    ]
  },
  "pre-commit": [
    "lint:staged"
  ],
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
